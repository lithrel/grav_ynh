{
    "name": "Grav",
    "id": "grav",
    "packaging_format": 1,
    "description": {
        "en": "Modern Open Source Flat-File CMS",
        "fr": "CMS Flat-File Moderne et Open Source"
    },
    "url": "https://getgrav.org/",
    "license" : "MIT",
    "maintainer": {
        "name": "lithrel",
        "email": "lithrel@randomdomainname.net"
    },
    "requirements": {
        "yunohost": ">= 2.5.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for Grav",
                    "fr": "Choisissez un domaine pour Grav"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Grav",
                    "fr": "Choisissez un chemin pour Grav"
                },
                "example": "/grav",
                "default": "/grav"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public application ?",
                    "fr": "Est-ce une page publique ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            },
            {
                "name": "install_admin",
                "ask": {
                    "en": "Do you wish to install the Admin plugin ?",
                    "fr": "Souhaitez-vous installer le plugin d'administration ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            },
            {
                "name": "private_admin",
                "ask": {
                    "en": "Make admin panel private ?",
                    "fr": "Souhaitez-vous rendre l'administration privée ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            },
            {
                "name": "create_admin",
                "ask": {
                    "en": "Create administrator automatically ?",
                    "fr": "Souhaitez-vous créer un administrateur automatiquement ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            }
        ]
    }
}